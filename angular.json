{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm",
    "analytics": "aefeecd7-0d59-413c-b065-3d5ef268c860"
  },
  "newProjectRoot": "projects",
  "projects": {
    "core-ledger-ui": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              },
              {
                "glob": "IBMPlexSans-{Light,Regular,Medium,SemiBold,Bold}.woff2",
                "input": "node_modules/@ibm/plex/IBM-Plex-Sans/fonts/complete/woff2",
                "output": "assets/fonts/ibm-plex-sans"
              },
              {
                "glob": "IBMPlexMono-{Light,Regular,Medium,SemiBold,Bold}.woff2",
                "input": "node_modules/@ibm/plex/IBM-Plex-Mono/fonts/complete/woff2",
                "output": "assets/fonts/ibm-plex-mono"
              }
            ],
            "styles": [
              "src/styles.scss"
            ],
            "polyfills": [
              "@angular/localize/init"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all",
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.production.ts"
                },
                {
                  "replace": "src/app/auth/mock-tokens.ts",
                  "with": "src/app/auth/mock-tokens.production.ts"
                },
                {
                  "replace": "src/app/api/mock-data/index.ts",
                  "with": "src/app/api/mock-data.production.ts"
                }
              ]
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.development.ts"
                }
              ]
            },
            "local-auth": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.local-auth.ts"
                }
              ]
            },
            "local-noauth": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.local-noauth.ts"
                }
              ]
            }
          },
          "defaultConfiguration": "local-noauth"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "options": {
            "proxyConfig": "src/proxy.conf.json"
          },
          "configurations": {
            "production": {
              "buildTarget": "core-ledger-ui:build:production"
            },
            "development": {
              "buildTarget": "core-ledger-ui:build:development"
            },
            "local-auth": {
              "buildTarget": "core-ledger-ui:build:local-auth"
            },
            "local-noauth": {
              "buildTarget": "core-ledger-ui:build:local-noauth"
            }
          },
          "defaultConfiguration": "local-noauth"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        }
      }
    }
  }
}
